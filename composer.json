{
    "name": "hosmelq/laravel-model-preferences",
    "description": "Per-model preferences for Laravel with defaults and validation.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "hosmelq",
        "eloquent",
        "laravel",
        "laravel-preferences",
        "laravel-settings",
        "php",
        "preferences",
        "settings"
    ],
    "authors": [
        {
            "name": "Hosmel Quintana",
            "email": "hosmelq@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0 || ^12.0",
        "illuminate/database": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0",
        "spatie/laravel-package-tools": "^1.92",
        "thecodingmachine/safe": "^3.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.49",
        "larastan/larastan": "^3.9",
        "laravel/pint": "^1.27",
        "orchestra/pest-plugin-testbench": "^3.2",
        "orchestra/testbench": "^9.0 || ^10.0",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.3",
        "rector/type-perfect": "^2.1",
        "shipmonk/composer-dependency-analyser": "^1.8",
        "spaze/phpstan-disallowed-calls": "^4.7",
        "thecodingmachine/phpstan-safe-rule": "^1.4",
        "ticketswap/phpstan-error-formatter": "^1.2",
        "tomasvotruba/type-coverage": "^2.1"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "HosmelQ\\ModelPreferences\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HosmelQ\\ModelPreferences\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "HosmelQ\\ModelPreferences\\ModelPreferencesServiceProvider"
            ]
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse --configuration=phpstan.neon.dist --memory-limit=4G",
        "pint": "pint",
        "rector": "rector",
        "test": "pest --ci"
    },
    "scripts-descriptions": {
        "phpstan": "Run PHPStan static analysis.",
        "pint": "Format code using Laravel Pint.",
        "rector": "Run Rector automated refactoring.",
        "test": "Run the test suite using Pest."
    },
    "$schema": "https://getcomposer.org/schema.json"
}
